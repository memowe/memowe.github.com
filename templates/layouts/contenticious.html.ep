<!doctype html>

%= t html => begin
    %= t head => begin
        % my $t = join ' - ' => grep { $_ } stash('title'), config('name');
        %= t title => $t // 'Unknown'
        %= t meta => ('http-equiv' => 'Content-Type', content => 'text/html; charset=UTF-8')
        %= javascript 'js/jquery.js'
        %= javascript 'js/bootstrap.js'
        %= stylesheet 'css/bootstrap.css'
        %= stylesheet 'css/bootstrap-theme.css'
    % end
    %= t body => begin
        %= t div => (class => 'col-xs-1 col-sm-2 col-lg-3')
        %= t div => (class => 'col-xs-10 col-sm-8 col-lg-6') => begin
            %= t header => begin
                %= link_to config('name') // 'contenticious' => rel_url_for 'content', cpath => ''
            % end
            %= t nav => (class => 'navbar navbar-default') => begin
                %= include 'navi'
            % end
            %= t main => begin
                %= content
            % end
            %= t footer => include 'footer'
        % end
        %= t div => (class => 'col-xs-1 col-sm-2 col-lg-3')
    % end
% end
